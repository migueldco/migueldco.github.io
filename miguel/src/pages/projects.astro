---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";

// In a real app, this would come from a CMS or content collection
const allProjects = [
	{
		title: "Competitive programming library",
		description: "A library of algorithms and data structures implemented in C++ for competitive programming.",
		tags: ["cpp", "algorithms", "data-structures", "competitive-programming"],
		link: "https://github.com/migueldco/cpp-kit",
	},
	{
		title: "Simple JIT compiler",
		description: "A simple Just-In-Time compiler implemented from scratch in C++ for the 'brainfuck' language.",
		tags: ["cpp", "compiler", "jit"],
		link: "https://github.com/migueldco/brainfuck",
	},
	{
		title: "Project 1",
		description: "Description of Project 1",
		tags: ["Tag 1", "Tag 2", "Tag 3"],
		link: "#",
	},
	{
		title: "Project 2",
		description: "Description of Project 2",
		tags: ["Tag 1", "Tag 2", "Tag 3"],
		link: "#",
	},
];
---

<Layout>
	<section class="section container">
		<h1 class="text-gradient">Projects</h1>
		<p class="intro">Here are some of my personal projects.</p>

		<div class="projects-grid">
			{allProjects.map((project) => <ProjectCard {...project} />)}
		</div>
	</section>
</Layout>

<style>
	h1 {
		margin-bottom: 0.5rem;
	}

	.intro {
		margin-bottom: 3rem;
		max-width: 600px;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}

	@media (max-width: 350px) {
		.projects-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}
	}
</style>
