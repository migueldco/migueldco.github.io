---
interface Props {
    title: string;
    description: string;
    tags: string[];
    link?: string;
    image?: string;
}

const { title, description, tags, link, image } = Astro.props;
---

<article class="project-card glass">
    {
        image && (
            <div class="card-image">
                <img src={image} alt={title} />
            </div>
        )
    }
    <div class="card-content">
        <h3><a href={link || "#"}>{title}</a></h3>
        <p>{description}</p>
        <div class="tags">
            {tags.map((tag) => <span class="tag">{tag}</span>)}
        </div>
    </div>
</article>

<style>
    .project-card {
        overflow: hidden;
        transition:
            transform 0.3s ease,
            border-color 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .project-card:hover {
        transform: translateY(-5px);
        border-color: var(--color-primary);
    }

    .card-image img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 0;
    }

    .card-content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    h3 a {
        color: #fff;
        text-decoration: none;
    }

    h3 a:hover {
        color: var(--color-primary);
    }

    p {
        font-size: 0.95rem;
        flex-grow: 1; /* Pushes tags to bottom */
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .tag {
        font-size: 0.75rem;
        background: rgba(255, 255, 255, 0.05);
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        color: var(--color-text-muted);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    @media (max-width: 600px) {
        .card-content {
            padding: 1rem;
        }
    }
</style>
