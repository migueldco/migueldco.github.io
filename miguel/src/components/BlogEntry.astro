---
type Props = {
	title: string;
	author: string;
	date: Date;
	tags?: string[];
};

const { title, date, tags } = Astro.props;
---

<article class="blog-entry container section">
	<header class="entry-header">
		<div class="meta">
			<time datetime={date.toISOString()}
				>{
					date.toLocaleDateString("en-US", {
						year: "numeric",
						month: "long",
						day: "numeric",
					})
				}</time
			>
			{
				tags && tags.length > 0 && (
					<span class="tags"> Â· {tags.join(", ")}</span>
				)
			}
		</div>
		<h1 class="text-gradient">{title}</h1>
	</header>

	<div class="content">
		<slot />
	</div>
</article>

<style>
	.blog-entry {
		max-width: 750px;
	}

	.entry-header {
		margin-bottom: 2.5rem;
		text-align: center;
	}

	.meta {
		color: var(--color-text-muted);
		font-family: var(--font-mono);
		font-size: 0.9rem;
		margin-bottom: 1rem;
	}

	h1 {
		font-size: 2.5rem;
		line-height: 1.2;
	}

	/* Markdown Content Styling */
	.content :global(h2) {
		font-size: 1.8rem;
		margin-top: 2.5rem;
		margin-bottom: 1rem;
		color: #fff;
	}

	.content :global(h3) {
		font-size: 1.4rem;
		margin-top: 2rem;
		margin-bottom: 0.8rem;
		color: var(--color-text-main);
	}

	.content :global(p) {
		margin-bottom: 1.5rem;
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--color-text-main);
	}

	.content :global(a) {
		color: var(--color-primary);
		text-decoration: underline;
		text-underline-offset: 3px;
	}

	.content :global(ul),
	.content :global(ol) {
		margin-bottom: 1.5rem;
		padding-left: 1.5rem;
		color: var(--color-text-main);
	}

	.content :global(li) {
		margin-bottom: 0.5rem;
	}

	.content :global(blockquote) {
		border-left: 4px solid var(--color-primary);
		padding-left: 1rem;
		margin-left: 0;
		margin-right: 0;
		font-style: italic;
		color: var(--color-text-muted);
		background: rgba(255, 255, 255, 0.03);
		padding: 1rem;
		border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
	}

	.content :global(img) {
		border-radius: var(--radius-md);
		margin: 2rem 0;
	}

	/* MathJax/Latex scaling if needed */
	.content :global(.MathJax) {
		font-size: 1.1em !important;
	}
</style>
